<div class="col-lg-12 p-r-0 p-l-0">
    <div class="card alert">
        <div class="card-header">
            <h4>Room Details</h4>
        </div>
        <div class="card-body room-details">
            <div class="basic-elements">
                <form>
                    <div class="row">
                        <div class="col-md-3 p-r-0">
                            <div class="form-group hourCheckin" style="margin-bottom:8px;">
                                <label>Hourly Check In</label>
                                <input type="checkbox"  id="hourCheckin"  class="form-control hour-input" onclick="OnChkHourlyCheckInChange();" placeholder="Hour Checkin">
                                <select id="hoursComboBox" class="form-control hour-dd" onchange="OnCmbHourlyCheckInChange();" disabled>
                                    <option selected="selected" value="-1">Select Hrs</option>
                                    <option value="1">1-hr</option>
                                    <option value="2">2-hr</option>
                                    <option value="4">4-hr</option>
                                    <option value="6">6-hr</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 p-r-0">
                            <div class="form-group">
                                <div class='input-group date' id='datetimepicker1'>
                                    <label>Check in &nbsp;&nbsp;</label>
                                    <input type='text' class="form-control calendar" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                <script type="text/javascript">
                                    $(function () {
                                        $('#datetimepicker1').datetimepicker();
                                    });
                                </script>
                            </div>
                        </div>
                        <div class="col-md-3 p-r-0">
                            <div class="form-group">
                                <div class='input-group date' id='datetimepicker2'>
                                    <label>Check Out</label>
                                    <input type='text' class="form-control calendar" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                <script type="text/javascript">
                                    $(function () {
                                        $('#datetimepicker2').datetimepicker();
                                    });
                                </script>
                            </div>
                        </div>
                        <div class="col-md-2 p-r-0">
                            <div class="form-group">
                                <label>Room Type</label>
                                <select id="roomTypeDdl" onchange="OnRoomTypeChange();" class="form-control">                                    
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 p-r-0">
                            <div class="form-group">
                                <label>Rate Type</label>
                                <select id="rateTypeDdl" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-md-3 p-r-0">
                            <div class="form-group">
                                <label>Room No</label>
                                <select id ="roomddl" class="form-control">
                                    <option value="-1">Select Room</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 p-r-0">
                            <div class="form-group">
                                <label>Adults</label>
                                <select id ="ddlAdults" class="form-control">
                                    <option>0</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2 p-r-0">
                            <div class="form-group">
                                <label>Children</label>
                                <select id="ddlChild" class="form-control">
                                    <option>0</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </div>
                        </div>
                        @*<div class="col-xs-2 add-btn">
                            <button type="button" class="btn btn-link btn-flat btn-addon m-b-10 m-l-5"><i class="ti-plus"></i>Add more Room</button>
                        </div>*@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>